<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.shape.Circle?>

<AnchorPane fx:id="anchorPane" prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controller">
    <children>
        <Circle fx:id="circle" fill="BLUE" layoutX="400.0" layoutY="300.0" radius="30.0" />


        <Button layoutX="370.0" layoutY="20.0" onAction="#moveUp" text="⬆" />
        <Button layoutX="370.0" layoutY="100.0" onAction="#moveDown" text="⬇" />
        <Button layoutX="300.0" layoutY="60.0" onAction="#moveLeft" text="⬅" />
        <Button layoutX="440.0" layoutY="60.0" onAction="#moveRight" text="➡" />


        <Button layoutX="300.0" layoutY="20.0" onAction="#moveUpLeft" text="↖" />
        <Button layoutX="440.0" layoutY="20.0" onAction="#moveUpRight" text="↗" />
        <Button layoutX="300.0" layoutY="100.0" onAction="#moveDownLeft" text="↙" />
        <Button layoutX="440.0" layoutY="100.0" onAction="#moveDownRight" text="↘" />


        <Button layoutX="405.0" layoutY="169.0" onAction="#setRedColor" prefHeight="26.0" prefWidth="63.0" text="Red" />
        <Button layoutX="307.0" layoutY="169.0" onAction="#cycleColor" text="Change Color" />


        <Button layoutX="306.0" layoutY="135.0" onAction="#changeBackgroundColor" prefHeight="26.0" prefWidth="162.0" text="Random Background" />

        <!-- Jump Button -->
        <Button fx:id="jumpButton" layoutX="651.0" layoutY="73.0" onAction="#jumpButtonAction" text="Click me" />
    </children>
</AnchorPane>
